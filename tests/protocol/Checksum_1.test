%description:

Tests CRC checksum.

%file: test.ned

import inet.queueing.source.ActivePacketSource;
import inet.queueing.sink.PassivePacketSink;
import inet.protocolelement.checksum.CrcHeaderInserter;
import inet.protocolelement.checksum.CrcHeaderChecker;

network TestCrc
{
    submodules:
        source: ActivePacketSource {
            @display("p=100,100");
        }
        inserter: CrcHeaderInserter {
            @display("p=100,200");
        }
        checker: CrcHeaderChecker {
            @display("p=100,300");
        }
        sink: PassivePacketSink {
            @display("p=100,400");
        }
    connections:
        source.out --> inserter.in;
        inserter.out --> checker.in;
        checker.out --> sink.in;
}

%inifile: omnetpp.ini

[General]
network = TestCrc
sim-time-limit = 10s
cmdenv-event-banners = false
*.source.packetLength = 100B
*.source.productionInterval = 1s

