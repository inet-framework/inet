%description:
Testing the number of received multicast datagrams in examples/pim/sm/ simulation.
%#--------------------------------------------------------------------------------------------------------------
%testprog: opp_run
%extraargs: -c Scenario4
%#--------------------------------------------------------------------------------------------------------------
%inifile: omnetpp.ini

[General]
ned-path = .;../../../../src;../../../../examples
sim-time-limit = 100s
output-scalar-file = test.sca
**.app[*].packetSent*.scalar-recording = true
**.app[*].packetReceived*.scalar-recording = true
**.scalar-recording = false
**.vector-recording = false

**.configurator.config = xmldoc("../../../../examples/pim/sm/basic/networkConfig.xml")

include ../../../../examples/pim/sm/basic/omnetpp.ini

%#--------------------------------------------------------------------------------------------------------------
%contains-regex: test.sca
scalar PIM_SM_Network.Source1.app\[0\]\s+packetSent:count\s+4\n
%#--------------------------------------------------------------------------------------------------------------
%contains-regex: test.sca
scalar PIM_SM_Network.Source2.app\[0\]\s+packetSent:count\s+4\n
%#--------------------------------------------------------------------------------------------------------------
%contains-regex: test.sca
scalar PIM_SM_Network.Receiver1.app\[0\]\s+packetReceived:count\s+1\n
%#--------------------------------------------------------------------------------------------------------------
%contains-regex: test.sca
scalar PIM_SM_Network.Receiver2.app\[0\]\s+packetReceived:count\s+2\n
