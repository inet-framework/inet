%description:

Test shutdown and startup operations on AccessPoint.

%inifile: omnetpp.ini

[General]
network = Test
tkenv-plugin-path = ../../../etc/plugins
ned-path = .;../../../../src;../../lib
cmdenv-express-mode = false
record-eventlog = true
sim-time-limit = 3s

**.hasStatus = true
**.scenarioManager.script = xmldoc("scenario.xml")
*.host.numRadios=2

*.host.mobilityType = "StationaryMobility"
**.mobility.constraintAreaMinX = 0m
**.mobility.constraintAreaMinY = 0m
**.mobility.constraintAreaMinZ = 0m
**.mobility.constraintAreaMaxX = 1000m
**.mobility.constraintAreaMaxY = 1000m
**.mobility.constraintAreaMaxZ = 0m
**.mobility.initFromDisplayString = false
**.mobility.initialX = 500m
**.mobility.initialY = 500m
**.mobility.initialZ = 0m

# nic
*.host*.wlan[*].typename = "IdealWirelessNic"
*.host.wlan[*].bitrate = 54Mbps
*.host*.wlan[*].mac.headerLength = 10B
*.host*.wlan[*].mac.fullDuplex = false
*.host*.wlan[*].radioType = "IdealRadio"
*.host*.wlan[*].radio.transmitter.bitrate = 2Mbps
*.host*.wlan[*].radio.transmitter.maxCommunicationRange = 1km
*.host*.wlan[*].radio.transmitter.maxInterferenceRange = 5km
*.host*.wlan[*].radio.transmitter.maxDetectionRange = 10km
*.host*.wlan[*].radio.receiver.ignoreInterference = true

%file: test.ned

import inet.common.lifecycle.LifecycleController;
import inet.node.wireless.AccessPoint;
import inet.physicallayer.ideal.IdealRadioMedium;
import inet.common.scenario.ScenarioManager;


network Test
{
    submodules:
        radioMedium: IdealRadioMedium;
        scenarioManager: ScenarioManager;
        lifecycleController: LifecycleController;
        host: AccessPoint;
}


%file: scenario.xml

<scenario>
    <at t="1.0">
        <tell module="lifecycleController" target="host" operation="NodeShutdownOperation"/>
    </at>
    <at t="2.0">
        <tell module="lifecycleController" target="host" operation="NodeStartOperation"/>
    </at>
    <at t="2.5">
        <tell module="lifecycleController" target="host" operation="NodeShutdownOperation"/>
    </at>
</scenario>

%contains-regex: stdout

Test.host shutting down
.*
Test.host shut down
.*
Test.host starting up
.*
Test.host started
.*
Test.host shutting down
.*
Test.host shut down
%#--------------------------------------------------------------------------------------------------------------
%not-contains: stdout
undisposed object:
%not-contains: stdout
-- check module destructor
%#--------------------------------------------------------------------------------------------------------------
