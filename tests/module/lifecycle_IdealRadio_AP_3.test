%description:

Test shutdown and startup operations on AccessPoint.
Test startup operation on AccessPoint that is initially down.

%inifile: omnetpp.ini

[General]
network = Test
tkenv-plugin-path = ../../../etc/plugins
ned-path = .;../../../../src;../../lib
cmdenv-express-mode = false
record-eventlog = true
sim-time-limit = 3s

**.hasStatus = true
**.initialStatus = "down"
**.scenarioManager.script = xmldoc("scenario.xml")
*.host.numRadios=2

*.host.mobilityType = "StationaryMobility"
**.mobility.constraintAreaMinX = 0m
**.mobility.constraintAreaMinY = 0m
**.mobility.constraintAreaMinZ = 0m
**.mobility.constraintAreaMaxX = 1000m
**.mobility.constraintAreaMaxY = 1000m
**.mobility.constraintAreaMaxZ = 0m
**.mobility.initFromDisplayString = false
**.mobility.initialX = 500m
**.mobility.initialY = 500m
**.mobility.initialZ = 0m

*.host.wlan[*].typename = "IdealWirelessNic"
*.host.wlan[*].bitrate = 54Mbps
*.host.wlan[*].mac.headerLength = 10B
*.host.wlan[*].radio.transmissionRange = 1km

%file: test.ned

import inet.base.LifecycleController;
import inet.nodes.wireless.AccessPoint;
import inet.world.radio.IdealChannelModel;
import inet.world.scenario.ScenarioManager;


network Test
{
    submodules:
        channelControl: IdealChannelModel;
        scenarioManager: ScenarioManager;
        lifecycleController: LifecycleController;
        host: AccessPoint;
}


%file: scenario.xml

<scenario>
    <at t="1.0">
        <tell module="lifecycleController" target="host" operation="NodeStartOperation"/>
    </at>
</scenario>

%contains-regex: stdout

Test.host starting up
.*
Test.host started
%#--------------------------------------------------------------------------------------------------------------
%not-contains: stdout
undisposed object:
%not-contains: stdout
-- check module destructor
%#--------------------------------------------------------------------------------------------------------------
