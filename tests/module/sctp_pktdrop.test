%description:
Testing SCTP Packet Drop Reporting
Flow Control is simulated. If the advertised receiver window drops to zero packet drop
reports should be sent.
%#--------------------------------------------------------------------------------------------------------------


%#--------------------------------------------------------------------------------------------------------------
%inifile: omnetpp.ini

[General]
network=SCTPFeatureTest
cmdenv-event-banners=false
cmdenv-express-mode = false
tkenv-plugin-path = ../../../etc/plugins
ned-path = .;../../../../src;../../lib

#omnetpp 5.0 - 5.1 compatibility:
eventlog-file = "${resultdir}/${configname}-${runnumber}.elog"
output-scalar-file = "${resultdir}/${configname}-${runnumber}.sca"
output-vector-file = "${resultdir}/${configname}-${runnumber}.vec"
snapshot-file = "${resultdir}/${configname}-${runnumber}.sna"

**.testing = false
**.testTimeout = 0

# udp app (off)

# tcp app (off)

# sctp apps
**.sctp_client.numApps = 1
**.sctp_client.app[0].typename = "SctpClient"
**.sctp_client.app[0].localAddress = "10.1.1.1"
**.sctp_client.app[0].connectAddress = "10.1.3.1"
**.sctp_client.app[0].primaryPath = "10.1.3.1"
**.sctp_client.app[0].connectPort = 6666
**.sctp_client.app[0].requestLength= 1452
**.sctp_client.app[0].startTime = truncnormal(1s,0.2s)
**.sctp_client.app[0].stopTime = truncnormal(60s,1s)
**.sctp_client.app[0].numRequestsPerSession = 100000
**.sctp_client.app[0].queueSize = 100
**.sctp_client.app[0].outboundStreams = 1
**.sctp_client.sctp.swsLimit=3000



**.sctp_server.numApps = 1
**.sctp_server.app[0].typename = "SctpServer"
**.sctp_server.app[0].localAddress = "10.1.3.1"
**.sctp_server.app[0].localPort = 6666
**.sctp_server.app[*].queueSize = 0 #Size of sendQueue before App is notified to send new data
**.sctp_server.app[*].numPacketsToSendPerClient = 10000
**.sctp_server.app[*].numPacketsToReceivePerClient = 0
**.sctp_server.app[*].outboundStreams = 1
**.sctp_server.app[0].messagesToPush = 1
**.sctp_server.app[0].readingInterval = 1000ms
**.sctp_server.sctp.swsLimit=3000

# sctp settings
**.hasSctp = true
**.sctp.sctpAlgorithmClass = "SctpAlg"
**.packetDrop = true
**.sctp.RTXMethod = 2

# NIC configuration
#**.ppp[*].queueType = "DropTailQueue" # in routers
#**.ppp[*].queue.frameCapacity = 100  # in routers
#**.ppp[*].ppp.mtu = 1500 B

#**.vector-recording = false

%#--------------------------------------------------------------------------------------------------------------
%contains-regex: results/General-0.sca
scalar SCTPFeatureTest.sctp_server.sctp[ \t]*"Drops Because New TSN Greater Than Highest TSN"[ \t]*[1-9][0-9]*
%contains-regex: results/General-0.sca
scalar SCTPFeatureTest.sctp_server.sctp[ \t]*"Number of PacketDrop Reports"[ \t]*[1-9][0-9]*
%#--------------------------------------------------------------------------------------------------------------
