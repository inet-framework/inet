%description:

Test ping stop followed by node startup.

%inifile: omnetpp.ini

[General]
network = Test
tkenv-plugin-path = ../../../etc/plugins
ned-path = .;../../../../src;../../lib
cmdenv-express-mode = false

*.host.numPingApps = 1
*.host.pingApp[0].destAddr = "192.168.0.42"
*.host.pingApp[0].startTime = 0s
*.host.pingApp[0].stopTime = 3.1s

*.host.networkLayer.configurator.networkConfiguratorModule = ""

**.hasStatus = true
**.initialStatus = "down"
**.scenarioManager.script = xmldoc("scenario.xml")

%file: test.ned

import inet.node.inet.StandardHost;
import inet.common.lifecycle.LifecycleController;
import inet.common.scenario.ScenarioManager;

network Test
{
    submodules:
        scenarioManager: ScenarioManager;
        lifecycleController: LifecycleController;
        host: StandardHost;
}

%file: scenario.xml
 
<scenario>
    <at t="6.0">
        <tell module="lifecycleController" target="host" operation="NodeStartOperation"/>
    </at>
</scenario>

%contains-regex: stdout

.*Event #\d+  T=6 .*
.*
Test.host starting up
.*
Test.host started

<!> No more events -- simulation ended at event #\d+, t=6

%not-contains: stdout
Sending ping #

%#--------------------------------------------------------------------------------------------------------------
%not-contains: stdout
undisposed object:
%not-contains: stdout
-- check module destructor
%#--------------------------------------------------------------------------------------------------------------
