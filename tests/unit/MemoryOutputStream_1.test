{
    inet::MemoryOutputStream s;
    s.writeBitRepeatedly(0, 5);
    s.writeByte(0x82);
    s.writeBitRepeatedly(0, 3);

    EV << "b0*5.x82.b0*3:" << s << "\n"; // 00000 1000 0010 000: 0000 0100 0001 0000
}

{
    inet::MemoryOutputStream s;
