{
    inet::MemoryOutputStream s;
    s.writeBitRepeatedly(0, 7);
    s.writeByte(0x82);
    s.writeBit(0);

    EV << "b0*7.x82.b0:" << s << "\n"; // 0000000 1000 0010 0: 0000 0001 0000 0100
