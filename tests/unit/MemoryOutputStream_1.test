{
    inet::MemoryOutputStream s;
    s.writeBitRepeatedly(1, 7);
    s.writeByte(0x82);
    s.writeBit(1);

    EV << "b1*7.x82.b1:" << s << "\n"; // 1111111 1000 0010 1: 1111 1111 0000 0101
