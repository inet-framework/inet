<?xml version="1.0"?>
<OSPFASConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="OSPF.xsd">

  <!-- Areas -->
  <Area id="0.0.0.0">
    <AddressRange address="BBR[0]%eth1" mask="BBR[0]%eth1" status="Advertise" />
    <AddressRange address="BBR[1]%eth0" mask="BBR[1]%eth0" status="Advertise" />
    <AddressRange address="BBR[1]%eth1" mask="BBR[1]%eth1" status="Advertise" />
    <AddressRange address="BBR[2]%eth1" mask="BBR[2]%eth1" status="Advertise" />
  </Area>

  <Area id="0.0.0.1">
    <AddressRange address="Stub1.B[0]%eth0" mask="Stub1.B[0]%eth0" status="Advertise" />
    <AddressRange address="Stub1.B[0]%eth1" mask="Stub1.B[0]%eth1" status="Advertise" />
    <AddressRange address="Stub1.B[0]%eth2" mask="Stub1.B[0]%eth2" status="Advertise" />
    <AddressRange address="Stub1.R[0]%eth0" mask="Stub1.R[0]%eth0" status="Advertise" />
    <AddressRange address="Stub1.R[0]%eth1" mask="Stub1.R[0]%eth1" status="Advertise" />
    <AddressRange address="Stub1.R[0]%eth2" mask="Stub1.R[0]%eth2" status="Advertise" />
    <AddressRange address="Stub1.R[1]%eth0" mask="Stub1.R[1]%eth0" status="Advertise" />
    <AddressRange address="Stub1.R[1]%eth1" mask="Stub1.R[1]%eth1" status="Advertise" />
    <AddressRange address="Stub1.R[1]%eth2" mask="Stub1.R[1]%eth2" status="Advertise" />
  </Area>

  <Area id="0.0.0.2">
    <AddressRange address="Stub2.B[0]%eth0" mask="Stub2.B[0]%eth0" status="Advertise" />
    <AddressRange address="Stub2.B[0]%eth1" mask="Stub2.B[0]%eth1" status="Advertise" />
    <AddressRange address="Stub2.B[0]%eth2" mask="Stub2.B[0]%eth2" status="Advertise" />
    <AddressRange address="Stub2.R[0]%eth0" mask="Stub2.R[0]%eth0" status="Advertise" />
    <AddressRange address="Stub2.R[0]%eth1" mask="Stub2.R[0]%eth1" status="Advertise" />
    <AddressRange address="Stub2.R[0]%eth2" mask="Stub2.R[0]%eth2" status="Advertise" />
    <AddressRange address="Stub2.R[1]%eth0" mask="Stub2.R[1]%eth0" status="Advertise" />
    <AddressRange address="Stub2.R[1]%eth1" mask="Stub2.R[1]%eth1" status="Advertise" />
    <AddressRange address="Stub2.R[1]%eth2" mask="Stub2.R[1]%eth2" status="Advertise" />
  </Area>

  <!-- Routers -->
  <Router name="BBR[0]" RFC1583Compatible="true">
    <BroadcastInterface ifName="eth0" areaID="0.0.0.1" interfaceOutputCost="1" /> <!-- Area border router -->
    <BroadcastInterface ifName="eth1" areaID="0.0.0.0" interfaceOutputCost="1" />
  </Router>

  <Router name="BBR[2]" RFC1583Compatible="true">
    <BroadcastInterface ifName="eth0" areaID="0.0.0.2" interfaceOutputCost="1" /> <!-- Area border router -->
    <BroadcastInterface ifName="eth1" areaID="0.0.0.0" interfaceOutputCost="1" />
  </Router>

  <Router name="BBR[1]" RFC1583Compatible="true">
    <BroadcastInterface ifName="eth0" areaID="0.0.0.0" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth1" areaID="0.0.0.0" interfaceOutputCost="1" />
  </Router>

  <Router name="Stub1.R[*]" RFC1583Compatible="true">
    <BroadcastInterface ifName="eth0" areaID="0.0.0.1" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth1" areaID="0.0.0.1" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth2" areaID="0.0.0.1" interfaceOutputCost="1" />
  </Router>

  <Router name="Stub1.B[*]" RFC1583Compatible="true">
    <BroadcastInterface ifName="eth0" areaID="0.0.0.1" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth1" areaID="0.0.0.1" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth2" areaID="0.0.0.1" interfaceOutputCost="1" />
  </Router>

  <Router name="Stub2.R[*]" RFC1583Compatible="true">
    <BroadcastInterface ifName="eth0" areaID="0.0.0.2" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth1" areaID="0.0.0.2" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth2" areaID="0.0.0.2" interfaceOutputCost="1" />
  </Router>

  <Router name="Stub2.B[*]" RFC1583Compatible="true">
    <BroadcastInterface ifName="eth0" areaID="0.0.0.2" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth1" areaID="0.0.0.2" interfaceOutputCost="1" />
    <BroadcastInterface ifName="eth2" areaID="0.0.0.2" interfaceOutputCost="1" />
  </Router>

</OSPFASConfig>
